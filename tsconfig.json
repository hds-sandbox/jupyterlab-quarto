{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strictNullChecks": true,
    "target": "ES2018",
    "types": ["node"],
    "moduleResolution":"node",
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  
}
